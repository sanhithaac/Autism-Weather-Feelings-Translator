{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "client/app/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "client/app/index.html"
        }
    ]
}